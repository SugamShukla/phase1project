		Scanner sc=new Scanner(System.in);
		int ch=sc.nextInt();
		AddFile obj= new AddFile();
		switch(ch) {
			case 1: 
			case 2:System.out.println("Choose an option to perform.\n 1. Add a file.\n2. Delete a file\n3. Search a file\n 4. Back to main menu");
			int c=sc.nextInt();
			switch(c) {
						case 1: obj.add();
						break;
						case 2:obj.delete();
						break;
						case 3:
							break;
						case 4:break;

			}
		}

	}

