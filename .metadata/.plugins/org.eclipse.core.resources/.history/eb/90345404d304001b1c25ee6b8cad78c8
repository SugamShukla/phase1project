package p;

import java.io.BufferedOutputStream;
import java.io.File;
import java.io.FileNotFoundException;
import java.io.FileOutputStream;
import java.io.IOException;
import java.util.ArrayList;
import java.util.Arrays;
import java.util.Collections;
import java.util.List;
import java.util.Scanner;
import java.util.Set;
import java.util.TreeSet;

public class BusinessLogic {
	String path="C:\\Users\\Rahul\\Downloads\\Programs\\phase1\\root";
	File folder = new File(path);
	int flag=0;
    String[] files = folder.list();
    Set<String> ts= new TreeSet();

	public void add() {
	
		System.out.println("enter the name of file in the format abc.txt:");
	      Scanner s= new Scanner(System.in);
	      String fileName=s.nextLine();
	      for(String x:ts) {
	            	ts.add(x);
	            	System.out.println(fileName+" is added.");
	            }
	   
	}
	public void delete() {
		//File folder = new File(path);
		
		//String[] files = folder.list();
       // List li= new ArrayList();
        System.out.println("Enter the name of file to delete:\n");
	    Scanner s3= new Scanner(System.in);
	    String fileToDelete= s3.nextLine();
        for(String x:ts) {
        	if(fileToDelete.equals(x)) {
            	ts.remove(x);
            	System.out.println(fileToDelete+" is deleted.");
            	flag=1;
            	break;
            } 
            else {
            	flag=0;
            }
        	if(flag==0) {
        		System.out.println("File Not Found !");
        	}
		
	}}
	public void search()
	{     
	//	File folder = new File(path);
		//int flag=0;
       // String[] files = folder.list();
        System.out.println("Enter the name of file to search:\n");
	    Scanner s3= new Scanner(System.in);
	    String fileToSearch= s3.nextLine();
 
        for (String s : ts)
        {
            if(fileToSearch.equals(s)) {
            	flag=1;
            	break;
            } 
            else {
            	flag=0;
            }
        }
        if(flag==1) {
        	System.out.println("File found !");
        }
        else {
        	System.out.println("File not found !");
        }
    	
    }
	public void sort()
	{
	//	File folder = new File(path);
		 
       // String[] files = folder.list();
       // Set<String> ts= new TreeSet();
        for(String x:files) {
        	    			ts.add(x);
        	}
        if(ts.isEmpty()) {
        	System.out.println("Folder is empty !!\n");
        }
        else {
        	System.out.println("Displaying files in ascending order..");
        	System.out.println(ts);
        }
        	
        
        
}}
