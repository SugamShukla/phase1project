	      File myObj = new File("C:\\Users\\Rahul\\Downloads\\Programs\\phase1\\root\\"+fileToDelete);
	    if (myObj.delete()) { 
	      System.out.println("Deleted the file: " + myObj.getName());
	    } else {
	      System.out.println("Failed to delete the file.");
	    } 
	}
